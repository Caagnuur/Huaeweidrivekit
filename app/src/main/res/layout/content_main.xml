<?xml version="1.0" encoding="UTF-8"?>

    <ScrollView tools:showIn="@layout/activity_main" tools:context="com.huawei.huaweidrivekit.MainActivity" android:layout_marginTop="?attr/actionBarSize" android:layout_height="wrap_content" android:layout_width="match_parent" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android">


    <androidx.constraintlayout.widget.ConstraintLayout tools:showIn="@layout/activity_main" tools:context=".MainActivity" android:layout_height="wrap_content" android:layout_width="match_parent" >

    <TextView android:layout_marginTop="930dp" android:layout_height="wrap_content" android:layout_width="fill_parent" android:textAlignment="center" android:text="tips here" tools:layout_editor_absoluteX="0dp" app:layout_constraintTop_toTopOf="parent" android:id="@+id/textView"
        tools:ignore="MissingConstraints" />

    <Button android:layout_marginTop="40dp" android:layout_height="wrap_content" android:layout_width="fill_parent" android:text="Login" tools:layout_editor_absoluteX="0dp" app:layout_constraintTop_toTopOf="parent" android:id="@+id/buttonLogin"
        tools:ignore="MissingConstraints" />

    <Button android:layout_marginTop="148dp" android:layout_height="wrap_content" android:layout_width="fill_parent" android:text="CREATE FOLDER AND UPLOAD FILE" tools:layout_editor_absoluteX="0dp" app:layout_constraintTop_toTopOf="parent" android:id="@+id/buttonUploadFiles"
        tools:ignore="MissingConstraints" />

    <Button android:layout_marginTop="264dp" android:layout_height="wrap_content" android:layout_width="fill_parent" android:text="QUERY FILE" tools:layout_editor_absoluteX="0dp" app:layout_constraintTop_toTopOf="parent" android:id="@+id/buttonQueryFiles"
        tools:ignore="MissingConstraints" />

    <Button android:layout_marginTop="372dp" android:layout_height="wrap_content" android:layout_width="fill_parent" android:text="DOWNLOAD THE FILE" tools:layout_editor_absoluteX="0dp" app:layout_constraintTop_toTopOf="parent" android:id="@+id/buttonDownloadFiles"
        tools:ignore="MissingConstraints" />

    <Button android:layout_marginTop="480dp" android:layout_height="wrap_content" android:layout_width="fill_parent" android:text="COMMENT THE FILE" tools:layout_editor_absoluteX="0dp" app:layout_constraintTop_toTopOf="parent" android:id="@+id/buttonCreateComment"
        tools:ignore="MissingConstraints" />

    <Button android:layout_marginTop="530dp" android:layout_height="wrap_content" android:layout_width="fill_parent" android:text="Query Comments" tools:layout_editor_absoluteX="0dp" app:layout_constraintTop_toTopOf="parent" android:id="@+id/buttonQueryComment"
        tools:ignore="MissingConstraints" />

    <Button android:layout_marginTop="680dp" android:layout_height="wrap_content" android:layout_width="fill_parent" android:text="Reply the comment" tools:layout_editor_absoluteX="0dp" app:layout_constraintTop_toTopOf="parent" android:id="@+id/buttonCreateReply"
        tools:ignore="MissingConstraints" />

    <Button android:layout_marginTop="730dp" android:layout_height="wrap_content" android:layout_width="fill_parent" android:text="Query Replies" tools:layout_editor_absoluteX="0dp" app:layout_constraintTop_toTopOf="parent" android:id="@+id/buttonQueryReply"
        tools:ignore="MissingConstraints" />

    <Button android:layout_marginTop="830dp" android:layout_height="wrap_content" android:layout_width="fill_parent" android:text="List HistoryVersion" tools:layout_editor_absoluteX="0dp" app:layout_constraintTop_toTopOf="parent" android:id="@+id/buttonQueryHistoryVersion"
        tools:ignore="MissingConstraints" />

    <EditText android:layout_marginTop="96dp" android:layout_height="wrap_content" android:layout_width="230dp" tools:layout_editor_absoluteX="0dp" app:layout_constraintTop_toTopOf="parent" android:id="@+id/uploadFileName" android:hint="Enter the file name in SD card"
        tools:ignore="MissingConstraints" />

    <EditText android:layout_marginTop="200dp" android:layout_height="wrap_content" android:layout_width="fill_parent" app:layout_constraintTop_toTopOf="parent" android:id="@+id/searchFileName" android:hint="Enter file's name for query,download and share" app:layout_constraintStart_toStartOf="parent"/>

    <EditText android:layout_marginTop="430dp" android:layout_height="wrap_content" android:layout_width="fill_parent" tools:layout_editor_absoluteX="0dp" app:layout_constraintTop_toTopOf="parent" android:id="@+id/commentText" android:hint="Comment"
        tools:ignore="MissingConstraints" />

    <EditText android:layout_marginTop="630dp" android:layout_height="wrap_content" android:layout_width="fill_parent" tools:layout_editor_absoluteX="0dp" app:layout_constraintTop_toTopOf="parent" android:id="@+id/replyText" android:hint="Reply"
        tools:ignore="MissingConstraints" />

    <TextView android:layout_marginTop="330dp" android:layout_height="wrap_content" android:layout_width="fill_parent" android:text="searsh result（only one record）" tools:layout_editor_absoluteX="0dp" app:layout_constraintTop_toTopOf="parent" android:id="@+id/queryResult"
        tools:ignore="MissingConstraints" />

    <TextView android:layout_marginTop="580dp" android:layout_height="wrap_content" android:layout_width="fill_parent" android:text="comment list" tools:layout_editor_absoluteX="0dp" app:layout_constraintTop_toTopOf="parent" android:id="@+id/commentList"
        tools:ignore="MissingConstraints" />

    <TextView android:layout_marginTop="780dp" android:layout_height="wrap_content" android:layout_width="fill_parent" android:text="reply list" tools:layout_editor_absoluteX="0dp" app:layout_constraintTop_toTopOf="parent" android:id="@+id/replyList"
        tools:ignore="MissingConstraints" />

    <TextView android:layout_marginTop="880dp" android:layout_height="wrap_content" android:layout_width="fill_parent" android:text="historyVersion list" tools:layout_editor_absoluteX="0dp" app:layout_constraintTop_toTopOf="parent" android:id="@+id/historyVersionList"
        tools:ignore="MissingConstraints" />

    <CheckBox android:layout_height="58dp" android:layout_width="139dp" android:text="applicationData" android:id="@+id/isApplicationData" app:layout_constraintLeft_toRightOf="@+id/uploadFileName" app:layout_constraintBaseline_toBaselineOf="@+id/uploadFileName" android:layout_marginLeft="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>